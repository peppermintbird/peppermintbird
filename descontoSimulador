function calcularDesconto(milhas) {
    if (milhas < 5000) {
        return 0; // Sem desconto para menos de 5.000 milhas
    } else if (milhas >= 5000 && milhas < 30000) {
        return 0.1; // 10% de desconto para 5.000 a 29.999 milhas
    } else if (milhas >= 30000) {
        return 0.2; // 20% de desconto para 30.000 milhas ou mais
    }
}

// Solicitar que o usuário insira o número de milhas
const milhasCliente = prompt("Digite o número de milhas sem casa decimal:");

// Garantir que a entrada seja convertida para um número
const milhasNumericas = parseInt(milhasCliente);

// Validar se a entrada é um número válido
if (isNaN(milhasNumericas)) {
    alert("Por favor, insira um número válido de milhas.");
} else {
    // Calcular o desconto com base nas milhas inseridas
    const desconto = calcularDesconto(milhasNumericas);

    // Exibir a mensagem de desconto
    if (desconto > 0) {
        alert(`Você recebe um desconto de ${desconto * 100}%. Yay!!!`);
    } else {
        alert("Você não recebe desconto. Sem Smiles pra você.");
    }
}

